<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sample.MainPage"
             Title="Configuration">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Set" Command="{Binding Set}" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding LastLoad, StringFormat='Last Loaded: {0:hh mm:ss tt}'}" 
                   FontSize="Title" 
                   HorizontalTextAlignment="Center" />
            
            <CollectionView ItemsSource="{Binding Values}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Label Text="{Binding Key}" FontSize="Large" FontAttributes="Bold" />
                            <Label Text="{Binding Value}" FontSize="Medium" FontAttributes="Italic" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
